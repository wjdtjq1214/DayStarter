<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pjs.daystarter.weatherDetail"
    android:orientation="vertical"
    android:background="#161616">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:id="@+id/wimage" />

    <TextView
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvtemp"
        android:layout_gravity="right"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

    <TextView
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/tvpop"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvh1"
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_width="125dp"
                android:layout_height="90dp"
                android:id="@+id/wimage1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/tvtemp1"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/tvpop1"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvh2"
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_width="125dp"
                android:layout_height="90dp"
                android:id="@+id/wimage2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/tvtemp2"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/tvpop2"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="140dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tvh3"
                android:textColor="#ffffff"/>
            <ImageView
                android:layout_width="125dp"
                android:layout_height="90dp"
                android:id="@+id/wimage3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:id="@+id/tvtemp3"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:id="@+id/tvpop3"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
